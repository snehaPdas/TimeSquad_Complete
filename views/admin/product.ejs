         <div class="right mt-5">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col"><b>Product name</b></th>
                        
                        <th scope="col"><b>Category</b></th>
                        <th scope="col"><b>Sale Price</b></th>
                        <th scope="col"><b>Action</b></th>
                        <th scope="col"><b>Edit</b></th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) {    %>
                            <tr>
                                <td><%= data[i].productName %></td>
                                
                                <td><%= data[i].category.categoryId.name %></td>
                                <td>₹<%= data[i].salePrice %></td>

                                
                                <td> 
                                    <% if (data[i].isBlocked === false) { %>
                                        <button class="btn btn-danger" style="width: 85px;" onclick="confirmAction('/admin/blockProduct','<%= data[i]._id %>')">Block</button>
                                        <span class="text-success">Product is unblocked</span>
                                    <% } else { %>
                                        <button class="btn btn-success" style="width: 85px;" onclick="confirmAction('/admin/unBlockProduct','<%= data[i]._id %>')">Unblock</button>
                                        <span class="text-danger">Product is blocked</span>
                                    <% } %>


                                </td>
                             <td>
                                <button class="btn btn-info" style="width: 80px;">
                                    <a href="/admin/editProduct?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Edit</a>
                                </button>
                             </td>
                            </tr>
                        <% } %>
