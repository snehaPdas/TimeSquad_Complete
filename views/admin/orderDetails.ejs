function handleDropdownChange(selectElement) {
       var selectedValue = selectElement.value;
       if(selectedValue == "canceled"){
          window.location.href = `/admin/cancelOrderAdmin?orderId=${orderId.value}&status=${selectedValue}`;
       }else if(selectedValue == "Shipped"){
           window.location.href = `/admin/changeStatus?orderId=${orderId.value}&status=${selectedValue}`;
       }else if(selectedValue == "Delivered"){
           window.location.href = `/admin/changeStatus?orderId=${orderId.value}&status=${selectedValue}`;
       }else{
           alert("error")
       }
     }
