    function namevalidate() {
    const nameval = nameid.value;
    const specialChars = /^[A-Za-z]+(?: [A-Za-z]+)*$/;

    if (nameval.trim() === "") {
        error1.style.display = "block";
        error1.innerHTML = "Please enter a valid name.";
    } else if (!specialChars.test(nameval)) {
        error1.style.display = "block";
        error1.innerHTML = "Name should only contain alphabetic characters.";
    } else {
        error1.style.display = "none";
        error1.innerHTML = "";
    }
}

    
    function confirmPassvalidate() {
    const confirmPassval = confirmPassid.value;
    const passval = passid.value;
    
    if (confirmPassval !== passval) {
        error5.style.display = "block";
        error5.innerHTML = "Password and Confirm Password do not match.";
    } else {
        error5.style.display = "none";
        error5.innerHTML = "";
    }
}

        emailid.addEventListener('blur', emailvalidate);
        nameid.addEventListener('blur', namevalidate);
        mobileid.addEventListener('blur', mobvalidate);
        passid.addEventListener('blur', passvalidate);
        confirmPassid.addEventListener('blur', confirmPassvalidate);
        regformform.addEventListener('submit', function (e) {
            emailvalidate();
            namevalidate();
            mobvalidate();
            passvalidate();
            confirmPassvalidate();

            // Check if any error messages are present
            if (error1.innerHTML || error2.innerHTML || error3.innerHTML || error4.innerHTML || error5.innerHTML) {
                e.preventDefault(); // Prevent form submission if there are errors
            }
        });
