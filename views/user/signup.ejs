<script>
    const emailid = document.getElementById('typeEmailX');
        const nameid = document.getElementById('typeNameX');
        const mobileid = document.getElementById('typeMobileX');
        const passid = document.getElementById('typePasswordX');
        const confirmPassid = document.getElementById('typeConfirmPasswordX');

        const error1 = document.getElementById('name-error');
        const error2 = document.getElementById('email-error');
        const error3 = document.getElementById('Phone-error');
        const error4 = document.getElementById('password-error');
        const error5 = document.getElementById('cpassword-error');

        const regformform = document.getElementById('regForm');

        function emailvalidate() {
            const emailval = emailid.value;
            const emailpattern = /^([a-zA-Z0-9._-]+)@([a-zA-Z.-]+).([a-zA-z]{2,4})$/;
            if (!emailpattern.test(emailval)) {
                error2.style.display = "block";
                error2.innerHTML = "Invalid Format!!";
            } else {
                error2.style.display = "none";
                error2.innerHTML = "";
            }
        }

        function passvalidate() {
            const passval = passid.value;
            const alpha = /[a-zA-Z]/;
            const digit = /\d/;
            if (passval.length < 8) {
                error4.style.display = "block";
                error4.innerHTML = "Must have at least 8 characters";
            } else if (!alpha.test(passval) || !digit.test(passval)) {
                error4.style.display = "block";
                error4.innerHTML = "Should contain Numbers and Alphabets!!";
            } else {
                error4.style.display = "none";
                error4.innerHTML = "";
            }
        }
        

