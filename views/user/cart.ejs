<script>

async function changeQuantity(productId, action,event) {
        
        try {
            event.preventDefault();
             const response = await $.ajax({
                type: 'POST',
                url: '/changeQuantity',
                data: {
                    id: productId,
                    action: action
                },
                dataType: 'json'
            });
             
            if (response.status) {

        

        const updatedItem = response.updatedCart.items.find(item => item.product._id === productId);
            if (updatedItem) {
                // Update quantity input field
                $(`#cartProductQuantity${productId}`).val(updatedItem.quantity);
                response.updatedCart.items.forEach(item => {
                const subtotalElement = $(`#subTotal${item.product._id}`);
                const newSubtotal = item.product.salePrice * item.quantity;
                subtotalElement.text(newSubtotal);
            
             })
        


               $('#total').text(response.updatedCart.totalPrice);
                // });
                // Display success message
                Swal.fire({
                    title: 'Success',
                    text: response.message,
                    icon: 'success'
                });
              } else {
              Swal.fire({
                title: 'Error',
                text: response.message ||'An error occurred while changing the quantity.',
                icon: 'error'
            });
            }
        }
        }catch (error) {
            Swal.fire({
                title: 'Error',
                text: 'Quantity limit reached',
                icon: 'error'
            });
        }
    }

</script>



